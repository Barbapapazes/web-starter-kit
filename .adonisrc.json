{
  "typescript": true,
  "commands": [
    "@adonisjs/core/commands"
  ],
  "providers": [
    "@adonisjs/core/providers/app_provider",
    "@adonisjs/core/providers/http_provider",
    "@adonisjs/core/providers/hash_provider",
    "@adonisjs/view/providers/views_provider",
    "./providers/emitter_provider.js",
    "./providers/app_provider.js"
  ],
  "preloads": [
    "#start/routes",
    "#start/kernel"
  ],
  "metaFiles": [
    {
      "pattern": "resources/views/**/*.edge",
      "reloadServer": true
    }
  ],
  "tests": {
    "suites": [
      {
        "files": [
          "tests/unit/**/*.spec(.ts|.js)"
        ],
        "name": "unit",
        "timeout": 2000
      },
      {
        "files": [
          "tests/functional/**/*.spec(.ts|.js)"
        ],
        "name": "functional",
        "timeout": 30000
      }
    ],
    "forceExit": false
  }
}
